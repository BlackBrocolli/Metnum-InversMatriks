            android:layout_marginRight="8sp"
            android:textSize="17sp"
            />

        <EditText
            android:id="@+id/duay"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="wrap_content"
